
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/styleLogin.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>

    <div class="container">
        <section id="content">

            <h1>Acceso al Sistema</h1>

            @using (Html.BeginForm("Validar", "Login", FormMethod.Post))
            {
                <table>
                    <tr>
                        <td>Ingrese usuario</td>
                        <td>@Html.TextBox("user")</td>
                    </tr>
                    <tr>
                        <td>Ingrese clave</td>
                        <td>@Html.TextBox("clave")</td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align:center"><input type="submit" value="Ingresar"/></td>                        
                    </tr>
                    <tr>
                        <td><span id="msg" style="color:red">@ViewBag.Error</span></td>
                    </tr>
                </table>
            }
        </section><!-- content -->
    </div><!-- container -->


    <script src="~/Scripts/jquery-3.1.1.js"></script>

    <script>

        $(document).ready(function () {
            $("#user").keypress(function () {
                $("#msg").remove();
            });

            $("#clave").keypress(function () {
                $("#msg").remove();
            });
        });

        function Validame() {
            var usuario = $("#user").val();
            var password = $("#clave").val();

            if (usuario == '' && password == '') {
                alert("Ingrese un usuario y password");
                $("#user").focus();
                return false;
            }

            if (usuario == '') {
                alert("Ingrese un usuario");
                $("#user").focus();
                return false;
            }

            if (password == '') {
                alert("Ingrese un password");
                $("#clave").focus();
                return false;
            }
            return true;
        }
    </script>
</body>
</html>
